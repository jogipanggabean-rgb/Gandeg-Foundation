    <script>
        // Chart.js configuration
        Chart.defaults.color = '#888';
        Chart.defaults.borderColor = 'rgba(255, 255, 255, 0.1)';
        
        // Energy Consumption Chart
        const consumptionCtx = document.getElementById('consumptionChart').getContext('2d');
        const consumptionChart = new Chart(consumptionCtx, {
            type: 'line',
            data: {
                labels: ['00:00', '04:00', '08:00', '12:00', '16:00', '20:00', 'Now'],
                datasets: [{
                    label: 'Actual Consumption',
                    data: [420, 380, 650, 890, 920, 780, 847],
                    borderColor: '#fff',
                    backgroundColor: 'rgba(255, 255, 255, 0.1)',
                    tension: 0.4,
                    fill: true
                }, {
                    label: 'AI Prediction',
                    data: [410, 375, 640, 900, 915, 770, 850],
                    borderColor: '#5fd35f',
                    backgroundColor: 'rgba(95, 211, 95, 0.1)',
                    tension: 0.4,
                    borderDash: [5, 5],
                    fill: false
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                plugins: {
                    legend: {
                        display: true,
                        position: 'top',
                        labels: {
                            usePointStyle: true,
                            padding: 15
                        }
                    }
                },
                scales: {
                    y: {
                        beginAtZero: false,
                        grid: {
                            color: 'rgba(255, 255, 255, 0.05)'
                        }
                    },
                    x: {
                        grid: {
                            display: false
                        }
                    }
                }
            }
        });
        
        // Trading Volume Chart
        const tradingCtx = document.getElementById('tradingChart').getContext('2d');
        const tradingChart = new Chart(tradingCtx, {
            type: 'bar',
            data: {
                labels: ['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun'],
                datasets: [{
                    label: 'Energy Traded (kWh)',
                    data: [145, 189, 176, 203, 198, 156, 217],
                    backgroundColor: 'rgba(255, 255, 255, 0.8)',
                    borderRadius: 8,
                    borderSkipped: false,
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                plugins: {
                    legend: {
                        display: false
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        grid: {
                            color: 'rgba(255, 255, 255, 0.05)'
                        }
                    },
                    x: {
                        grid: {
                            display: false
                        }
                    }
                }
            }
        });
        
        // Animate current load
        function animateLoad() {
            const loadEl = document.getElementById('currentLoad');
            setInterval(() => {
                const newLoad = 800 + Math.floor(Math.random() * 100);
                loadEl.textContent = newLoad;
            }, 3000);
        }
        animateLoad();
        
        // Animate next hour prediction
        function animatePrediction() {
            const predEl = document.getElementById('nextHourPred');
            setInterval(() => {
                const newPred = 880 + Math.floor(Math.random() * 60);
                predEl.textContent = newPred + ' kW';
            }, 5000);
        }
        animatePrediction();
        
        // Real-time feed simulation
        const feedItems = [
            { icon: '⚡', text: 'Gedung Teknik sold 2.4 kWh to Perpustakaan', value: 'Rp 3,600', time: 'Just now' },
            { icon: '🤖', text: 'AI detected peak demand in 45 minutes', value: 'Alert', time: '2 min ago' },
            { icon: '🔋', text: 'Solar generation increased by 18%', value: '+0.8 kWh', time: '5 min ago' },
            { icon: '💹', text: 'New trade opportunity: FMIPA needs 1.8 kWh', value: 'Available', time: '7 min ago' },
            { icon: '📊', text: 'Grid optimization completed', value: '92% efficient', time: '12 min ago' },
            { icon: '🌱', text: 'CO₂ reduction milestone reached', value: '20 kg today', time: '18 min ago' },
            { icon: '⚡', text: 'Gedung Satu sold 3.1 kWh to GSG', value: 'Rp 4,650', time: '23 min ago' },
            { icon: '🤖', text: 'LSTM model accuracy improved', value: '94.2%', time: '35 min ago' }
        ];
        
        function addFeedItem(item) {
            const feedContainer = document.getElementById('feedContainer');
            const feedItemEl = document.createElement('div');
            feedItemEl.className = 'feed-item';
            feedItemEl.innerHTML = `
                <div class="feed-icon">${item.icon}</div>
                <div class="feed-content">
                    <div class="feed-text">${item.text}</div>
                    <div class="feed-time">${item.time}</div>
                </div>
                <div class="feed-value">${item.value}</div>
            `;
            feedContainer.insertBefore(feedItemEl, feedContainer.firstChild);
            
            // Remove old items if more than 8
            if (feedContainer.children.length > 8) {
                feedContainer.removeChild(feedContainer.lastChild);
            }
        }
        
        // Initialize feed
        feedItems.forEach(item => addFeedItem(item));
        
        // Add new feed item every 10 seconds
        setInterval(() => {
            const randomItem = feedItems[Math.floor(Math.random() * feedItems.length)];
            addFeedItem({...randomItem, time: 'Just now'});
        }, 10000);
    </script>
